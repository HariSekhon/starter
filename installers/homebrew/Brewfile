#!/usr/bin/env bash

# Install command-line tools using Homebrew

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until the script has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade --all

# Install GNU core utilities (those that come with OS X are outdated)
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
#brew install coreutils
# Install some other useful utilities like `sponge`
#brew install moreutils
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, `g`-prefixed
#brew install findutils
# Install GNU `sed`, overwriting the built-in `sed`
#brew install gnu-sed --default-names

# Install Shells
# Note: Don't forget to add shells to `/etc/shells` before running `chsh`.
brew install bash
#brew install bash-completion
brew install zsh

# Install wget with IRI support
brew install wget --with-iri

# Install RingoJS and Narwhal
# Note that the order in which these are installed is important; see http://git.io/brew-narwhal-ringo.
brew install ringojs
brew install narwhal

# Install more recent versions of some OS X tools
#brew install vim --override-system-vi
brew install homebrew/dupes/grep
brew install homebrew/dupes/screen

# Install server stack
brew install homebrew/php/php56
brew install homebrew/php/php56-opcache
brew install homebrew/php/php56-apcu
brew install homebrew/php/php56-mcrypt
brew install mysql
brew install dnsmasq

# Install Python tools
#brew install pyenv

# Install Ruby tools
brew install rbenv
brew install ruby-build

# Install JS tools
brew install node # This installs `npm` too using the recommended installation method
brew install rhino
brew install phantomjs
brew install slimerjs

# Install CSS and JS compressors
brew install closure-compiler
brew install yuicompressor

# Install other useful binaries
#brew install bfg
brew install git
brew install imagesnap
brew install lynx
brew install pv
brew install pwgen
brew install tree
brew install webkit2png
brew install ffmpeg --with-faac --with-libvpx --with-x265

# Install recovery and security tools
brew install foremost
brew install nmap
brew install sqlmap
brew install hashpump

# Install image utilities
brew install advancecomp
brew install apngasm
#brew install exiv2
brew install gifsicle
brew install gifify
brew install graphicsmagick
brew install icoutils
brew install imagemagick --with-libtiff --with-librsvg --with-webp
brew install imageworsener
brew install jhead
brew install jpeg
brew install jpegoptim
brew install homebrew/headonly/jpegrescan --HEAD
brew install libbpg
brew install mozjpeg
brew install optipng
brew install perceptualdiff
brew install pngcrush
brew install pngnq
brew install pngquant
brew install webp
brew install zopfli --HEAD

# X11 utilities
#brew install homebrew/x11/xpdf

# Install compression tools
brew install p7zip
brew install bzip2
brew install pbzip2
brew install lbzip2
brew install gzip
brew install pigz
brew install xz
brew install pxz
brew install pixz
brew install unar

# Remove outdated versions from the cellar
brew cleanup
